{
  "name": "openexo-toolkit",
  "description": "OpenExO Brand Guidelines and ToolKit",
  "version": "0.0.1",
  "repository": "https://github.com/DevIntent/dev",
  "homepage": "https://devintent-dev.firebaseapp.com/",
  "bugs": "https://github.com/DevIntent/dev/issues",
  "sasslintConfig": "./projects/_sass-lint.yml",
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve design-system-demo",
    "build": "ng build design-system-demo",
    "build:prod": "ng build design-system-demo --prod",
    "build:lib": "ng build design-system && npm run build:lib:scss",
    "build:lib:scss": "node bundle-scss.js",
    "publish:lib": "npm run lint && npm run build:lib && npm publish ./dist/design-system --access public",
    "test": "ng test",
    "lint": "ng lint",
    "lint:prettier": "npm run lint && npm run format:check",
    "lint:sass": "./node_modules/.bin/sass-lint --config ./projects/_sass-lint.yml \"projects/**/*.scss\" -v -q",
    "e2e": "ng e2e",
    "smex": "source-map-explorer",
    "update": "npm-check -u",
    "format:check": "./node_modules/.bin/prettier --config ./.prettierrc --write \"projects/**/*{.ts,.js,.json,.css,.scss}\"",
    "deploy:gh-pages": "npm run build:lib && ng build --prod design-system-demo --output-path docs --base-href https://exolever.github.io/exo-design-system/ && cd docs && cp index.html 404.html"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.2",
    "@angular/cdk": "~7.2.2",
    "@angular/common": "~7.2.2",
    "@angular/compiler": "~7.2.2",
    "@angular/core": "~7.2.2",
    "@angular/forms": "~7.2.2",
    "@angular/http": "~7.2.2",
    "@angular/material": "~7.2.2",
    "@angular/platform-browser": "~7.2.2",
    "@angular/platform-browser-dynamic": "~7.2.2",
    "@angular/router": "~7.2.2",
    "core-js": "~2.6.3",
    "hammerjs": "~2.0.8",
    "ngx-markdown": "^7.1.4",
    "rxjs": "~6.3.3",
    "zone.js": "^0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.12.3",
    "@angular-devkit/build-ng-packagr": "^0.12.3",
    "@angular-devkit/core": "^7.2.3",
    "@angular-devkit/schematics": "^7.2.3",
    "@angular/cli": "~7.2.3",
    "@angular/compiler-cli": "~7.2.2",
    "@angular/language-service": "~7.2.2",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~10.12.18",
    "angular-cli-ghpages": "^0.5.3",
    "codelyzer": "~4.5.0",
    "jasmine-core": "~3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "~1.4.0",
    "ng-packagr": "^4.6.0",
    "npm-check": "~5.9.0",
    "prettier": "^1.16.4",
    "protractor": "~5.4.2",
    "rxjs-tslint": "~0.1.6",
    "sass-lint": "^1.12.1",
    "scss-bundle": "^2.4.0",
    "source-map-explorer": "~1.6.0",
    "ts-node": "~8.0.1",
    "tsickle": "~0.34.0",
    "tslib": "~1.9.3",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "~3.2.4"
  }
}
